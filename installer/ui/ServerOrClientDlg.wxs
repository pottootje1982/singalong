<?xml version="1.0" encoding="UTF-8"?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
      <Property Id="InstallMode">Unknown</Property>
        <UI>
            <Dialog Id="ServerOrClientDlg" Width="370" Height="270" Title="!(loc.SetupTypeDlg_Title)">
                
                <Control Id="Description" Type="Text" X="20" Y="60" Width="220" Height="17" Transparent="yes" NoPrefix="yes" Text="Please select the type of install you want to perform" />
                
                <Control Id="InstallModeButtons" Type="RadioButtonGroup" X="20" Y="80" Width="350" Height="100" Property="InstallMode">
                	<Publish Event="Remove" Value="ClientExecutable">InstallMode="Server"</Publish>
                	<Publish Event="AddLocal" Value="ServerExecutable">InstallMode="Server"</Publish>

                	<Publish Event="Remove" Value="ServerExecutable">InstallMode="Client"</Publish>
                	<Publish Event="AddLocal" Value="ClientExecutable">InstallMode="Client"</Publish>
                </Control>
                
                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
                
                <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
					 	<Condition Action="disable">InstallMode="Unknown"</Condition>
					 	<Condition Action="enable">NOT InstallMode="Unknown"</Condition>
					 </Control>
                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
                    <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
                </Control>
                <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.SetupTypeDlgBannerBitmap)" />
                <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
                <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
                <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Install Server or Client" />
            </Dialog>
            
            <!-- Radio buttons -->
            <RadioButtonGroup Property="InstallMode">
            	<RadioButton Value="Unknown" X="0" Y="0"  Width="0" Height="0" /> <!-- Hackity hack -->
            	<RadioButton Value="Server" X="15" Y="0"  Width="350" Height="17" Text="Install on this computer as a server" />
            	<RadioButton Value="Client" X="15" Y="20" Width="350" Height="17" Text="Install on this computer as a client" />
            </RadioButtonGroup>
        </UI>
   </Fragment>
</Wix>